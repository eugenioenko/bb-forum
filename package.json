{
  "name": "bb-client-v2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port=4200",
    "build": "next build",
    "start": "next start",
    "db": "docker-compose up -d",
    "lint": "next lint",
    "prisma:init": "prisma init",
    "prisma:migrate": "export DATABASE_URL=mysql://root:password@localhost:3306/bb && prisma migrate dev --preview-feature",
    "prisma:generate": "prisma generate",
    "prisma:seed": "prisma db seed",
    "docker:build": "docker build -t bbforum .",
    "docker:clean": "docker stop bbforum && docker rm bbforum && docker rmi bbforum",
    "docker:deploy": "docker run -d -p 3000:3000 --restart unless-stopped --name bbforum bbforum",
    "test": "npx vitest",
    "test:headless": "npx vitest --run --browser.headless"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} src/prisma/seed.ts"
  },
  "dependencies": {
    "next": "15.0.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@floating-ui/react": "^0.27.0",
    "@hookform/resolvers": "^3.9.1",
    "@ngneat/falso": "^7.2.0",
    "@prisma/client": "^6.0.1",
    "@tabler/icons-react": "^3.24.0",
    "@tanstack/react-query": "^5.62.3",
    "@tanstack/react-query-devtools": "^5.62.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^2.1.8",
    "axios": "^1.7.9",
    "axios-cache-interceptor": "^1.6.2",
    "bcrypt": "^5.1.1",
    "dataloader": "^2.2.3",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.0.4",
    "jsdom": "^25.0.0",
    "jsonwebtoken": "^9.0.2",
    "msw": "^2.6.8",
    "playwright": "^1.49.0",
    "postcss": "^8.4.49",
    "prisma": "^6.0.1",
    "prisma-erd-generator": "^1.11.2",
    "react-hook-form": "^7.54.0",
    "tailwindcss": "^3.4.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "zod": "^3.23.8",
    "zustand": "^5.0.2"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
